{
  "name": "bouzuya.net",
  "description": "bouzuya's web site.",
  "version": "2.0.1",
  "author": {
    "name": "bouzuya",
    "email": "bouzuya@gmail.com",
    "url": "http://bouzuya.net"
  },
  "bugs": {
    "url": "https://github.com/bouzuya/bouzuya.net/issues"
  },
  "devDependencies": {
    "b-html-cli": "0.3.1",
    "browser-sync": "2.13.0",
    "clean-css": "3.4.18",
    "mkdirp": "0.5.1",
    "npm-run-all": "2.3.0",
    "rimraf": "2.5.3",
    "stylus": "0.54.5",
    "watch": "0.19.1"
  },
  "homepage": "http://bouzuya.net",
  "keywords": [
    "bouzuya"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/bouzuya/bouzuya.net"
  },
  "scripts": {
    "build": "npm-run-all -s 'clean' -p 'build:bhtml' 'build:styl' -s 'build:css'",
    "build:bhtml": "b-html -o './public/' './src/'",
    "build:css": "cleancss './public/styles/default.css' -o './public/styles/default.css'",
    "build:styl": "stylus './src/styles/default.styl' -o './public/styles/'",
    "clean": "rimraf './public/*.html' './public/styles/*.css'",
    "prebuild": "mkdirp public/styles",
    "watch": "npm-run-all -p 'watch:start' 'watch:bhtml' 'watch:styl'",
    "watch:bhtml": "watch --wait 2 'npm-run-all -s \"build:bhtml\" \"watch:reload\"' './src/'",
    "watch:reload": "browser-sync reload",
    "watch:start": "browser-sync start -s './public'",
    "watch:styl": "watch --wait 2 'npm-run-all -s \"build:styl\" \"watch:reload\"' './src/styles/'"
  }
}
